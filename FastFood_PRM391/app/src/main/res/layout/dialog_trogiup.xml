<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Chúng tôi giúp được gì cho bạn?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:text="Chủ đề"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            style="@style/txt_trogiup"
            android:text="Tài khoản của tôi" />
        <TextView
            style="@style/txt_trogiup"
            android:text="Sản phẩm bán trên FastFood"/>
        <TextView
           style="@style/txt_trogiup"
            android:text="Thanh toán" />
        <TextView
            style="@style/txt_trogiup"
            android:text="Giao nhận hàng"/>
        <TextView
            style="@style/txt_trogiup"
            android:text="Đổi trả"/>
        <TextView
            style="@style/txt_trogiup"
            android:text="Hoàn tiền" />
        <TextView
            android:id="@+id/btn_ok"
            android:layout_marginTop="16dp"
            style="@style/btn"
            android:text="OK" />
    </LinearLayout>
</ScrollView>