<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chính sách chung"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <TextView
            style="@style/txt_chinsach"
            android:text="1. Quy chế quản lý hoạt động ứng dụng" />

        <TextView
            style="@style/txt_chinsach"
            android:text="2. Chính sách bảo mật" />

        <TextView
            style="@style/txt_chinsach"
            android:text="3. Quyền hạn của khách hàng" />

        <TextView
            style="@style/txt_chinsach"
            android:text="4. Quyền hạn của FastFood" />

        <TextView
            style="@style/txt_chinsach"
            android:text="5. Liên hệ với chúng tôi" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Điều kiện điều khoản"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <TextView
            style="@style/txt_chinsach"
            android:text="1. Điều kiện mua bán hàng hoá" />

        <TextView
            style="@style/txt_chinsach"
            android:text="2. Đặt hàng và xác nhận đặt hàng" />

        <TextView
            style="@style/txt_chinsach"
            android:text="3. Hình thức thanh toán" />

        <TextView
            style="@style/txt_chinsach"
            android:text="4. Chương trinhg khuyến mãi" />

        <TextView
            style="@style/txt_chinsach"
            android:text="5. Khu vực giao hàng" />
        <TextView
            style="@style/txt_chinsach"
            android:text="6. Giá cả" />
        <TextView
            android:id="@+id/btn_ok"
            android:layout_marginTop="16dp"
            style="@style/btn"
            android:text="OK" />
    </LinearLayout>
</LinearLayout>